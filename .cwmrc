command term st
command lock slock

borderwidth 0
sticky yes

unbind-key all
unbind-mouse all

bind-key 4-u menu-exec
bind-key 4-i menu-ssh
bind-key 4-o window-fullscreen
bind-key 4-y terminal
bind-key 4-h lock
bind-key 4-w window-close
bind-key 4-Tab window-cycle-ingroup
bind-key 4-j "bash -c \"sleep 0.2; scrot -s\""
bind-key 4-k "light -A 10"
bind-key 4-l "light -U 10"

bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3

bind-mouse 4-1 window-move
